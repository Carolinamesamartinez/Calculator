<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A3E4D7"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_vista"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center|right"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:background="#D6EAF8"
        android:padding="10dp"
        android:textColor="#0000ff"
        android:textStyle="bold"
        android:textSize="30sp"


        />



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button

            android:id="@+id/button_borrar"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="AC"

            android:textColor="#D6EAF8"
            android:textSize="30dp" />


        <Button

            android:id="@+id/button_sumar"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="+"
            android:textColor="#D6EAF8"
            android:textSize="30dp" />

        <Button

            android:id="@+id/button_restar"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="-"
            android:textColor="#D6EAF8"
            android:textSize="30dp" />

        <Button

            android:id="@+id/button_multiplicar"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="*"
            android:textColor="#D6EAF8"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button

            android:id="@+id/button_1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="1"
            android:textColor="#D6EAF8"
            android:textSize="30dp" />

        <Button

            android:id="@+id/button_2"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="2"
            android:textColor="#D6EAF8"
            android:textSize="30dp" />

        <Button

            android:id="@+id/button_3"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="3"
            android:textColor="#D6EAF8"
            android:textSize="30dp" />

        <Button

            android:id="@+id/button_dividir"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="/"
            android:textColor="#D6EAF8"
            android:textSize="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button

            android:id="@+id/button_4"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="4"
            android:textColor="#D6EAF8"
            android:textSize="30dp" />

        <Button

            android:id="@+id/button_5"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="5"
            android:textColor="#D6EAF8"
            android:textSize="30dp" />

        <Button

            android:id="@+id/button_6"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="6"
            android:textColor="#D6EAF8"
            android:textSize="30dp" />

        <Button

            android:id="@+id/button_decimal"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="."
            android:textColor="#D6EAF8"
            android:textSize="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button

            android:id="@+id/button_7"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="7"
            android:textColor="#D6EAF8"
            android:textSize="30dp" />

        <Button

            android:id="@+id/button_8"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="8"
            android:textColor="#D6EAF8"
            android:textSize="30dp" />

        <Button

            android:id="@+id/button_9"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="9"
            android:textColor="#D6EAF8"
            android:textSize="30dp" />

        <Button

            android:id="@+id/button_0"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#D6EAF8"
            android:textSize="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button

            android:id="@+id/button_igual"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="="
            android:textColor="#D6EAF8"
             />
        <Button

            android:id="@+id/button_porcentaje"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:text="%"
            android:textColor="#D6EAF8"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/editText_cuenta"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="0"
            android:background="#D6EAF8"
            android:padding="20dp"
            android:textColor="#0000ff"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/textView_resultado"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="2"
            android:background="#D6EAF8"
            android:padding="20dp"
            android:textColor="#0000ff"
            android:textStyle="bold"
            android:textSize="15sp"

            />







    </LinearLayout>


</LinearLayout>